<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/conditionImageView"
        android:scaleType="fitCenter"
        android:contentDescription="@string/weather_condition_image"
        android:layout_width="@dimen/image_side_lenght"
        android:layout_height="match_parent" />

    <GridLayout
        android:rowCount="2"
        android:columnCount="3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:useDefaultMargins="true"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dayTextView"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/lowTextView"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/highTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
             />

        <TextView
            android:id="@+id/humidtTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
             />

    </GridLayout>
</LinearLayout>